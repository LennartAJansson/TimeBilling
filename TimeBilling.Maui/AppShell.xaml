<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeBilling.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeBilling.Maui"
    xmlns:views="clr-namespace:TimeBilling.Maui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="Main"/>

    <ShellContent
        Title="People"
        ContentTemplate="{DataTemplate views:PeoplePage}"
        Route="People"/>

    <ShellContent
        Title="Customers"
        ContentTemplate="{DataTemplate views:CustomersPage}"
        Route="Customers"/>

    <ShellContent
        Title="Workloads"
        ContentTemplate="{DataTemplate views:WorkloadsPage}"
        Route="Workloads"/>

    <!--<ShellContent
        Title="Person"
        ContentTemplate="{DataTemplate views:PersonPage}"
        Route="Person" />-->

</Shell>
