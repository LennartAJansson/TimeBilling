<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TimeBilling.Maui.ViewModels"
             x:Class="TimeBilling.Maui.Views.PersonPage"
             Title="PersonPage"
             x:DataType="vm:PersonPageViewModel">
    <VerticalStackLayout>
        <Label Text="{Binding SelectedPerson.PersonId}" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding SelectedPerson.Name}" FontSize="Large" FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentPage>