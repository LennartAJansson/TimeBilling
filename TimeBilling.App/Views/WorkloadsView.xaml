<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TimeBilling.App.ViewModels"
             xmlns:m="clr-namespace:TimeBilling.App.Models"
             x:Class="TimeBilling.App.Views.WorkloadsView"
             x:DataType="vm:WorkloadsViewModel">
    <VerticalStackLayout>
        <Label Text="{Binding SelectedWorkload.Begin}" FontSize="Large" FontAttributes="Bold"/>
        <ListView ItemsSource="{Binding Workloads}" SelectedItem="{Binding SelectedWorkload}" HeightRequest="500">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Begin}" x:DataType="m:WorkloadModel"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
