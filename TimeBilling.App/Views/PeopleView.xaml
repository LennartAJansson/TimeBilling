<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TimeBilling.App.ViewModels"
             xmlns:m="clr-namespace:TimeBilling.App.Models"
             x:Class="TimeBilling.App.Views.PeopleView"
             x:DataType="vm:PeopleViewModel">
    <VerticalStackLayout>
        <Label  Text="{Binding SelectedPerson.Name}" FontSize="Large" FontAttributes="Bold"/>
        <ListView ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}" HeightRequest="500">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" x:DataType="m:PersonModel"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
